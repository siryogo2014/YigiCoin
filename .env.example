# PayPal Configuration
# Obtain your PayPal Client ID from: https://developer.paypal.com/dashboard/applications
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your-paypal-client-id
# Environment: "sandbox" for testing, "production" for live transactions
NEXT_PUBLIC_PAYPAL_ENV=sandbox

# MetaMask / Blockchain Configuration
# Your smart contract address for receiving payments (MUST be a valid address, not a placeholder)
NEXT_PUBLIC_PAYMENT_CONTRACT=0xYourContract
# Default blockchain network ID (137 = Polygon PoS, 8453 = Base, 11155111 = Sepolia, 80002 = Polygon Amoy)
NEXT_PUBLIC_DEFAULT_CHAIN_ID=137
# Comma-separated list of allowed chain IDs
NEXT_PUBLIC_ALLOWED_CHAIN_IDS=137,8453,11155111,80002

# Payment Webhook Configuration (Server-side only, not exposed to client)
# URL of your backend webhook for payment validation
PAYMENT_WEBHOOK_URL=https://your-webhook.example.com/validate
# Bearer token for webhook authentication (optional)
PAYMENT_WEBHOOK_TOKEN=your-webhook-token
# Timeout for webhook requests in milliseconds
PAYMENT_TIMEOUT_MS=10000
