############################################
# Identidad / URLs (solo ejemplo/plantilla)
############################################
NEXT_PUBLIC_APP_NAME=YigiCoin
# URL pública del sitio (ajústala en Vercel en PRODUCCIÓN)
NEXT_PUBLIC_BASE_URL=http://localhost:3000

############################################
# Autenticación / Tokens (si tu app los usa)
############################################
# Si usas NextAuth o JWT, rellena un secreto fuerte:
# Genera uno (PowerShell): [Convert]::ToBase64String((1..32 | % {Get-Random -Max 256}))
NEXTAUTH_SECRET=
# Si no usas NextAuth, puedes usar:
JWT_SECRET=

############################################
# Base de datos (PROD en Vercel; local si aplica)
############################################
# Ejemplo Postgres (ajusta a tu proveedor):
# postgres://usuario:password@host:5432/db?sslmode=require
DATABASE_URL=

############################################
# Email transaccional (elige uno)
############################################
# RESEND (recomendado para OTP/avisos)
RESEND_API_KEY=
EMAIL_FROM=no-reply@yigicoin.com
# SENDGRID (alternativa)
SENDGRID_API_KEY=

############################################
# PayPal Configuration
# Client ID público para cargar el SDK en el cliente
############################################
# Obtén tu Client ID: https://developer.paypal.com/dashboard/applications
NEXT_PUBLIC_PAYPAL_CLIENT_ID=
# Entorno: "sandbox" para pruebas, "production" para real
NEXT_PUBLIC_PAYPAL_ENV=sandbox

# Credenciales PRIVADAS (si tu backend valida/crea órdenes)
PAYPAL_CLIENT_ID=
PAYPAL_SECRET=
# Si usas webhooks de PayPal, coloca el ID del webhook configurado en el Dashboard
PAYPAL_WEBHOOK_ID=

############################################
# MetaMask / Blockchain Configuration
############################################
# Dirección del contrato que recibirá pagos (válida, NO placeholder)
NEXT_PUBLIC_PAYMENT_CONTRACT=0xYourContract
# Red por defecto (137=Polygon PoS, 8453=Base, 11155111=Sepolia, 80002=Polygon Amoy)
NEXT_PUBLIC_DEFAULT_CHAIN_ID=137
# Lista de chain IDs permitidos (separados por coma)
NEXT_PUBLIC_ALLOWED_CHAIN_IDS=137,8453,11155111,80002

############################################
# Payment Webhook (Server-Side, NO público)
############################################
# Endpoint backend para validar pagos (tu API)
PAYMENT_WEBHOOK_URL=https://your-webhook.example.com/validate
# Token Bearer opcional para autenticar el webhook
PAYMENT_WEBHOOK_TOKEN=
# Timeout para llamadas al webhook (ms)
PAYMENT_TIMEOUT_MS=10000

############################################
# Seguridad / Anti-abuso (opcional)
############################################
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=60
